<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Edge-to-edge rendering can be found on theme.xml(v29)-->
    <style name="Base.AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentNavigation">true</item>

        <item name="android:statusBarColor">@color/bloco_pink</item>
    </style>

    <style name="ButtonColor" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme" parent="Base.AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/bloco_pink</item>
        <item name="colorPrimaryVariant">@color/bloco_pink</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/bloco_light_blue</item>
        <item name="colorSecondaryVariant">@color/bloco_dark_blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSurface">@color/black</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorError">@color/dark_red</item>
        <item name="colorOnError">@color/dark_red</item>

        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <!-- Custom styles -->
        <item name="toolbarNavigationButtonStyle">@style/Widget.Bloco.ToolbarNavigationButton</item>
        <item name="titleTextStyle">@style/TextAppearance.Bloco.ToolbarTitle</item>
        <item name="android:buttonStyle">@style/ButtonColor</item>
    </style>

</resources>